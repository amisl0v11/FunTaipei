<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    app:cardBackgroundColor="#ccffcc">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/travelCollectionImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/no_image"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/Group_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group_ID:"
        android:textColor="#000000"
        android:layout_gravity="left"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/Group_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group_name:"
        android:textColor="#000000"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/gp_datestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="報名開始"
        android:textColor="#000000"
        android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#000000"
            android:layout_toRightOf="@id/gp_datestart"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/gp_dateend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="報名結束"
        android:textColor="#000000"
        android:layout_toRightOf="@id/gp_datestart"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/gp_eventstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活動開始："
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>
</androidx.cardview.widget.CardView>