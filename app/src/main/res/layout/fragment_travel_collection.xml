<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.funtaipei.travelCollection.TravelCollectionFragment"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <com.example.funtaipei.CircleImageView
            android:id="@+id/travelCollection_Memberimageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_image"/>

        <!--        <ImageView-->
        <!--            android:id="@+id/travelCollection_Memberimageview"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:src="@drawable/no_image"/>-->
        <TextView
            android:id="@+id/travelCollection_MemberId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member_id"
            android:layout_toRightOf="@id/travelCollection_Memberimageview"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/travelCollection_MemberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MB_NAME"
            android:layout_toRightOf="@id/travelCollection_Memberimageview"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/travelCollection_MemberId"
            android:textSize="22sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/travelCollection_MemberEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MB_Email"
            android:layout_toRightOf="@id/travelCollection_Memberimageview"
            android:layout_below="@id/travelCollection_MemberName"
            android:layout_marginLeft="10dp"
            android:textColor="#A0A0A0"/>


        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="0.5sp"
            android:textColor="#000000"
            android:layout_marginTop="15dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/travelCollectionRecycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/travelCollection_Memberimageview"
        android:layout_marginTop="15dp">

    </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/travelCollectionbtnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:src="@drawable/ic_add_black_24dp">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>




</androidx.coordinatorlayout.widget.CoordinatorLayout>