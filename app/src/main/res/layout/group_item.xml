<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="18dp"
    app:cardBackgroundColor="#ffff00"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="30dp"
    android:layout_marginLeft="20dp">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/groupImage"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:src="@drawable/no_image"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/groupImage"
            android:text="ID："
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/group_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/title"
            android:layout_below="@id/groupImage"
            android:text="55688"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:text="團隊名稱："
            android:textColor="#000000" />

        <TextView
            android:id="@+id/groupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_id"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/name"
            android:text="我是測試UI"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/startTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出發時間："
            android:textColor="#000000"
            android:layout_below="@id/groupTitle"/>

        <TextView
            android:id="@+id/gp_eventstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/groupTitle"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/startTitle"
            android:text="出發時間："
            android:textColor="#000000" />
        <TextView
            android:id="@+id/dateStartTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="開始報名日期:"
            android:layout_below="@id/startTitle"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/gp_datestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gp_eventstart"
            android:layout_toRightOf="@id/dateStartTitle"
            android:layout_marginLeft="5dp"
            android:text="2019"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/dateEndTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="結束報名時間:"
            android:layout_below="@id/dateStartTitle"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/gp_dateend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gp_datestart"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/dateEndTitle"
            android:text="2019"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gp_dateend"
            android:layout_marginTop="40dp"
            android:text="1"
            android:textColor="#000000"
            android:textSize="0.5dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>