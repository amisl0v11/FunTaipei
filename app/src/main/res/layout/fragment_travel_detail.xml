<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".travel.TravelDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/travel_imageview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/no_image" />

            />
        <TextView
            android:id="@+id/travel_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/travel_title"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="ID:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/travel_title"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="台北101一日遊"
            android:textSize="26sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/travel_title"
            android:background="#000000"
            android:text="1"
            android:textSize="1dp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#000000"
            android:text="1"
            android:textSize="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行程:"
            android:textSize="36sp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/travel_detail_recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="0.5dp"
            android:textColor="#000000"
            android:layout_marginTop="15dp"/>
        <Button
            android:id="@+id/btnAddTravel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#ffff66"
            android:layout_gravity="right"
            android:text="新增行程" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="團體:"
            android:textSize="36sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/group_recycleview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="15dp" />




    </LinearLayout>
</ScrollView>